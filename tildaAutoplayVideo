<video id="videoAboutUsDesctop" style="background-image: url('https://paveldotbake.github.io/staticpictureonbackground/preview.jpg'); background-position: center; background-repeat: no-repeat;" reload="auto" playsinline autoplay loop muted>
  <source src="https://paveldotbake.github.io/staticpictureonbackground/team.mp4" type="video/mp4">
</video>

<script>

var videoDesctop = document.getElementById("videoAboutUsDesctop");

if (document.documentElement.clientWidth >= 1200)
{
    videoDesctop.width = 592;
    videoDesctop.height = 333;
    
} else {
    
    videoDesctop.width = 496;
    videoDesctop.height = 279;
    
}

videoDesctop.addEventListener("click", function(event) { 
    if (videoDesctop.paused == true) {
        videoDesctop.play();
        
    } else {
        videoDesctop.pause();
        
    }
});
</script>
